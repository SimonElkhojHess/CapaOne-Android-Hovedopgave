<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_slate"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_sky"
        android:orientation="horizontal"
        android:outlineProvider="bounds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/capaonelogo"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/app_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/dark_slate"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/customborder"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:layout_constraintBottom_toTopOf="@+id/device_name"
        >

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/infoborderleft_devicename"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:background="@drawable/infoborderleft"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/device_name"
        app:layout_constraintBottom_toBottomOf="@id/device_name"
        app:layout_constraintEnd_toStartOf="@+id/device_name"
        app:layout_constraintStart_toStartOf="parent"
        >
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/device_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="0dp"
        android:background="@drawable/topinfoborder"
        android:orientation="horizontal"
        android:paddingHorizontal="5dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/infoborderleft_devicename"
        app:layout_constraintTop_toBottomOf="@id/top_bar_border">

        <TextView
            android:id="@+id/device_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/device_name_label"
            android:textColor="@color/dark_slate"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/device_name_edit_button"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/light_sky"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:text="@string/edit_device_name_button_text"
            android:textColor="@color/dark_slate"
            android:textSize="10sp"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@id/device_name_field" />

        <Button
            android:id="@+id/approve_new_device_name"
            android:layout_width="45dp"
            android:layout_height="37dp"
            android:backgroundTint="@color/android_green"
            android:gravity="center_vertical"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:text="@string/approve_new_device_name_button_text"
            android:textColor="@color/dark_slate"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/device_name_label" />

        <EditText
            android:id="@+id/edit_device_name_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:importantForAutofill="no"
            android:inputType="text"
            android:lines="1"
            android:textColor="@color/dark_slate"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/approve_new_device_name" />

        <TextView
            android:id="@+id/device_name_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MyTestDevice"
            android:textColor="@color/dark_slate"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/infoborderleft_osversion"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:background="@drawable/infoborderleft"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/device_name"
        app:layout_constraintBottom_toBottomOf="@id/os_version"
        app:layout_constraintEnd_toStartOf="@+id/os_version"
        app:layout_constraintStart_toStartOf="parent"
        >
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/os_version"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="0dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="5dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/infoborderleft_osversion"
        app:layout_constraintTop_toBottomOf="@+id/device_name">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text="@string/device_osversion_label"
            android:textColor="@color/dark_slate"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/os_version_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:text=""
            android:textColor="@color/dark_slate"
            android:textSize="18sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/infoborderleft_devicemodel"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:background="@drawable/infoborderleft"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/device_model"
        app:layout_constraintBottom_toBottomOf="@id/device_model"
        app:layout_constraintEnd_toStartOf="@+id/device_model"
        app:layout_constraintStart_toStartOf="parent"
        >
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/device_model"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="5dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/infoborderleft_devicemodel"
        app:layout_constraintTop_toBottomOf="@+id/os_version">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text="@string/device_model_label"
            android:textColor="@color/dark_slate"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/device_model_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:text=""
            android:textColor="@color/dark_slate"
            android:textSize="18sp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/infoborderleft_devicelocation"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:background="@drawable/infoborderleft"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/device_location"
        app:layout_constraintBottom_toBottomOf="@id/device_location"
        app:layout_constraintEnd_toStartOf="@+id/device_location"
        app:layout_constraintStart_toStartOf="parent"
        >
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/device_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="0dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/device_model"
        app:layout_constraintStart_toEndOf="@+id/infoborderleft_devicelocation"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/device_location_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/device_location_label_text"
            android:textColor="@color/dark_slate"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/device_location_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/dark_slate"
            android:textSize="18sp" />


        </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_border"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/bottominfoborder"
        android:orientation="horizontal"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@+id/device_location"
        app:layout_constraintStart_toStartOf="@id/device_location"
        app:layout_constraintEnd_toEndOf="@id/device_location"
        >
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>